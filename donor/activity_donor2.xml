<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.annadhan.DonorActivity">

    <EditText
        android:id="@+id/et_time"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:hint="TIME"
        app:layout_constraintBottom_toTopOf="@+id/btn_ready"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_location"
        app:layout_constraintVertical_bias="0.241" />

    <EditText
        android:id="@+id/et_location"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:hint="LOCATION"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_package"
        app:layout_constraintVertical_bias="0.114"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/et_package"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:hint="PACKAGING TYPE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_quantity"
        app:layout_constraintVertical_bias="0.057"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/et_quantity"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:hint="QUANTITY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.073" />


    <Button
        android:id="@+id/btn_ready"
        android:layout_width="178dp"
        android:layout_height="59dp"
        android:text="READY TO DONATE!"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="386dp" />
</android.support.constraint.ConstraintLayout>
